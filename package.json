{
  "name": "strawberry-jam",
  "description": "strawberry jam is my personal fork of the project jam created and developed by sxip.",
  "main": "src/index.js",
  "version": "1.0.0",
  "author": "glvckoma",
  "scripts": {
    "dev": "npx cross-env NODE_ENV=development nodemon",
    "build:win": "npx electron-builder build -w",
    "build:mac": "npx electron-builder build -m",
    "build:all": "npx electron-builder build -wm",
    "build:mac-docker": "npx electron-builder build --mac -c.mac.target=zip --x64 --arm64 -p never --config.asar=true --config.npmRebuild=true -c.mac.identity=null --config.electronDownload.mirror=https://npmmirror.com/mirrors/electron/",
    "build:mac-win": "docker run --rm -v \"%cd%\":/project -v \"%cd%/dist\":/project/dist electronuserland/builder:wine /bin/bash -c \"npm run build:mac-docker\"",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:win": "npm run version:patch && npx electron-builder build -w -p always",
    "publish:all": "npm run version:patch && npx electron-builder build -wm -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glvckoma/strawberry-jam"
  },
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "ajv": "^8.6.2",
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "cross-env": "^7.0.3",
    "electron-store": "^7.0.1",
    "electron-updater": "^4.3.9",
    "express": "^4.17.1",
    "inquirer": "^12.5.2",
    "jquery": "^3.6.0",
    "live-plugin-manager": "^0.17.1",
    "node-gyp": "^8.4.1",
    "npm": "^10.8.2",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "tailwindcss": "^3.4.10",
    "tree-kill": "^1.2.2",
    "yargs": "^17.7.2"
  }
}
