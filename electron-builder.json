{
  "productName": "strawberry-jam",
  "electronVersion": "32.0.1",
  "directories": {
    "output": "build"
  },
  "win": {
    "files": [
      "src/**/*"
    ],
    "icon": "./assets/icon.ico",
    "asar": "true",
    "target": {
      "target": "nsis",
      "arch": [
        "x64"
      ]
    }
  },
  "mac": {
    "files": [
      "src/**/*"
    ],
    "icon": "./assets/icon.png",
    "asar": "true",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "extraFiles": [
    "plugins/advertising/**/*",
    "plugins/chat/**/*",
    "plugins/invisibleToggle/**/*",
    "plugins/login/**/*",
    "plugins/loginPacketManipulator/**/*",
    "plugins/membership/**/*",
    "plugins/room/**/*",
    "plugins/spammer/**/*",
    {
      "from": "assets",
      "to": "assets",
      "filter": [
        "**/*",
        "!extracted-winapp/**/*",
        "!memory-bank/**/*"
      ]
    },
    "public/**/*",
    "settings.json"
  ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": [
        "**/*",
        "!extracted-winapp/**/*",
        "!memory-bank/**/*"
      ]
    },
    "public/"
  ],
  "publish": {
    "provider": "github",
    "releaseType": "release"
  }
}
