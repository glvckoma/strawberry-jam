{
  "productName": "strawberry-jam",
  "electronVersion": "32.0.1",
  "directories": {
    "output": "build"
  },
  "win": {
    "icon": "./assets/icon.ico",
    "asar": "true",
    "target": {
      "target": "nsis",
      "arch": [
        "x64"
      ]
    }
  },
  "mac": {
    "icon": "./assets/icon.png",
    "asar": "true",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "files": [
    "**/*",
    "!src/data/collected_usernames.txt",
    "!src/data/processed_usernames.txt",
    "!**/node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/**/*.d.ts",
    "!**/node_modules/**/*.ts",
    "!**/node_modules/.bin",
    "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
    "!.editorconfig",
    "!**/._*",
    "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
    "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
    "!**/{appveyor.yml,.travis.yml,circle.yml}",
    "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
    "!**/*.{bak,swp,tmp}",
    "!**/temp-*/**",
    "!**/temp_*/**",
    "!**/tmp-*/**",
    "!**/tmp_*/**",
    "!**/*-backup*/**",
    "!**/*-copy*/**",
    "!**/tester-*.js",
    "!**/data/collected_usernames.txt",
    "!**/data/processed_usernames.txt",
    "!**/data/ajc_accounts.txt",
    "!**/data/found_accounts.txt",
    "!**/data/potential_accounts.txt",
    "!**/data/working_accounts.txt",
    "!clean-public-build.js",
    "!verify-build.js",
    "!tag-plugin.js",
    "!process_logs.js",
    "!pack-and-run.js",
    "!SECURITY-SUMMARY.md",
    "!SECURITY.md",
    "!SIMPLE-GUIDE.md",
    "!memory-bank/**/*",
    "!assets/memory-bank/**/*"
  ],
  "extraFiles": [
    {
      "from": "plugins",
      "to": "plugins",
      "filter": [
        "**/*",
        "!**/*.bak",
        "!**/*-backup*",
        "!**/*.tmp",
        "!**/*-copy*",
        "!**/temp_*",
        "!**/tmp_*"
      ]
    },
    {
      "from": "assets",
      "to": "assets",
      "filter": [
        "**/*",
        "!memory-bank/**/*",
        "!extracted-winapp-dev/**/*",
        "!extracted-winapp-public/**/*",
        "!*-backup.asar",
        "!*-dev.asar",
        "!**/*.bak",
        "!**/*-backup*",
        "!**/*.tmp",
        "!**/*-copy*",
        "!**/temp_*",
        "!**/tmp_*"
      ]
    },
    "public/**/*",
    "settings.json"
  ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": [
        "**/*",
        "!memory-bank/**/*",
        "!extracted-winapp-dev/**/*",
        "!extracted-winapp-public/**/*",
        "!*-backup.asar",
        "!*-dev.asar",
        "!**/*.bak",
        "!**/*-backup*",
        "!**/*.tmp",
        "!**/*-copy*",
        "!**/temp_*",
        "!**/tmp_*"
      ]
    },
    "public/",
    {
      "from": "src/electron/clear-cache-helper.js",
      "to": "clear-cache-helper.js"
    }
  ],
  "publish": {
    "provider": "github",
    "releaseType": "release"
  }
}
