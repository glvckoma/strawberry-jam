{
  "productName": "strawberry-jam",
  "electronVersion": "32.0.1",
  "directories": {
    "output": "build"
  },
  "files": [
    "src/**/*",
    "package.json",
    "!*.*",
    "!*.*", 
    "!dev/**/*",
    "!build/**/*",
    "!data/**/*",
    "!memory-bank/**/*",
    "!plugin_packages/**/*",
    "!plugins/UsernameLogger/**/*",
    "!community-guide/**/*",
    "!assets/extracted-winapp-dev/**/*",
    "!assets/extracted-winapp-public/**/*",
    "!assets/memory-bank/**/*",
    "!assets/winapp.asar",
    "!assets/osxapp.asar",
    "!assets/*-backup.asar",
    "!assets/*-dev.asar"
  ],
  "win": {
    "icon": "./assets/icon.ico",
    "asar": "true",
    "target": {
      "target": "nsis",
      "arch": [
        "x64"
      ]
    }
  },
  "mac": {
    "icon": "./assets/icon.png",
    "asar": "true",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "extraFiles": [
    "plugins/advertising/**/*",
    "plugins/chat/**/*",
    "plugins/invisibleToggle/**/*",
    "plugins/login/**/*",
    "plugins/loginPacketManipulator/**/*",
    "plugins/membership/**/*",
    "plugins/room/**/*",
    "plugins/spammer/**/*",
    {
      "from": "assets",
      "to": "assets",
      "filter": [
        "**/*",
        "!extracted-winapp-dev/**/*",
        "!extracted-winapp-public/**/*",
        "!memory-bank/**/*",
        "!winapp.asar",
        "!osxapp.asar",
        "!*-backup.asar",
        "!*-dev.asar"
      ]
    },
    "public/**/*"
  ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": [
        "**/*",
        "!extracted-winapp-dev/**/*",
        "!extracted-winapp-public/**/*",
        "!memory-bank/**/*",
        "!winapp.asar",
        "!osxapp.asar",
        "!*-backup.asar",
        "!*-dev.asar"
      ]
    },
    "public/"
  ],
  "publish": {
    "provider": "github",
    "releaseType": "release"
  }
}
